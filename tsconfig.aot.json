{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "./public/js/app",
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [
          "es6",
          "dom"
        ]
      },
      "angularCompiledOptions": {
          "skipMetadataEmit": true
      },
      "exclude": [
        "node_modules",
        "public/js",
        "assets/app/polyfills.ts"      
    ]
    }
    